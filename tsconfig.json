{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["es2018", "dom"],
    "paths": {
      "@spica-server/*": ["./packages/*", "./stacks/api/*", "./migrate/*"],
      "@spica-devkit/*": ["./stacks/api/function/packages/"]
    },

  },
  "exclude": [
    "dist",
    "bazel-*",
    "./stacks/spica/*",
    "**/**.spec.ts",
    "./tools/*",
    "./stacks/migrate/*",
    "./stacks/api/function/runtime/node/bootstrap/*"
  ]
}
