{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://spica.internal/passport/identity-create",
	"type": "object",
	"title": "The identity schema",
	"required": [
		"identifier",
		"password"
	],
	"properties": {
		"identifier": {
			"type": "string",
			"title": "Identifier of the identity",
			"minLength": 3
		},
		"password": {
			"type": "string",
			"title": "Password of the identity",
			"pattern": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{12,}$"
		},
		"attributes":{
			"type":"object"
		},
		"lastLogin":{
			"type":["string", "null"],
			"format": "date-time"
		},
		"failedAttempts":{
			"type":"array",
			"items": {
				"type":"string",
				"format": "date-time"
			}
		},
		"refreshTokens":{
			"type":"array",
			"items": {
				"type":"object",
				"properties": {
					"token": {
						"type":"string"
					},
					"userAgent": {
						"type":"string"
					},
					"createdAt": {
						"type":"string",
						"format": "date-time"
					},
					"expiresAt": {
						"type":"string",
						"format": "date-time"
					}
				} 
			}
		}
	},
	"additionalProperties": false
}